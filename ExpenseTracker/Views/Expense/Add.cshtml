 @model ExpenseDto
<form asp-controller="Expense"asp-action="Add"method="post">
    <div class="form-group">
        <label asp-for="Amount" class="control-label"></label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Type" class="control-label"></label>
        <input asp-for="Type" class="form-control" />
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Summary" class="control-label"></label>
        <input asp-for="Summary" class="form-control" />
        <span asp-validation-for="Summary" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <input type="submit" value="Add Expense" class="btn btn-primary" />
        <a asp-area="" asp-controller="Expense" asp-action="All" class="btn btn-secondary">Back to Expenses</a>
    </div>
</form>